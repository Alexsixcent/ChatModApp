<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             x:Class="ChatModApp.App">
    <Application.Styles>
        <styling:FluentAvaloniaTheme PreferSystemTheme="True" PreferUserAccentColor="True"/>
		<StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
        <StyleInclude Source="/Controls/PersonIcon.axaml"/>
        <StyleInclude Source="/Controls/AdvancedImage.axaml"/>
		<StyleInclude Source="/Controls/ChatMessage.axaml"/>
		<StyleInclude Source="/Controls/ChatEmote.axaml"/>
		<StyleInclude Source="/Controls/ChatBadge.axaml"/>
		<StyleInclude Source="/Controls/ChatViewStripItem.axaml"/>
    </Application.Styles>
	
	<Application.Resources>
		<StaticResource x:Key="CoreSplashScreenBackground" ResourceKey="TextControlBackground" />
		<StaticResource x:Key="CoreSplashScreenForeground" ResourceKey="TextControlForeground" />
		
		<system:Boolean x:Key="True">True</system:Boolean>
		<system:Boolean x:Key="False">False</system:Boolean>
	</Application.Resources>
</Application>
