<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:controls="using:ChatModApp.Controls">
	<Design.PreviewWith>
		<controls:ChatEmote />
	</Design.PreviewWith>

	<Style Selector="controls|ChatEmote">
		<!-- Set Defaults -->
		<Setter Property="Template">
			<ControlTemplate>
				<Border Margin="1, 0"
						ToolTip.Placement="Pointer">
					<ToolTip.Tip>
						<Grid RowDefinitions="Auto,Auto">
							<controls:CachedImage Name="PART_ToolTipImage"
												  Stretch="None"
												  HorizontalAlignment="Center"
												  Margin="5"
												  MaxWidth="200"/>
							<TextBlock Grid.Row="1"
									   Name="PART_EmoteCode"
									   HorizontalAlignment="Center"
									   TextAlignment="Center"
									   Margin="5" />
						</Grid>
					</ToolTip.Tip>
					<controls:CachedImage Name="PART_EmoteImage"
										  Stretch="None" />
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>