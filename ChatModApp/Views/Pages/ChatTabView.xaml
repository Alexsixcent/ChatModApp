<pages:ChatTabViewBase
    x:Class="ChatModApp.Views.Pages.ChatTabView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewModels="using:ChatModApp.ViewModels"
    xmlns:reactiveUi="using:ReactiveUI"
    xmlns:pages="using:ChatModApp.Views.Pages"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <muxc:TabView x:Name="TabViewControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <muxc:TabView.TabItemTemplate>
                <DataTemplate x:DataType="viewModels:ChatTabItemViewModel">
                    <muxc:TabViewItem Header="{x:Bind Title, Mode=OneWay}">
                        <reactiveUi:RoutedViewHost Router="{x:Bind Router, Mode=OneTime}"/>
                    </muxc:TabViewItem>
                </DataTemplate>
            </muxc:TabView.TabItemTemplate>
        </muxc:TabView>
    </Grid>
</pages:ChatTabViewBase>
