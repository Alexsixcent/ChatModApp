<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatModApp.Views.Controls.MessageView">

    <Style TargetType="local:MessageView">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MessageView">
                    <RichTextBlock Name="RichTextBlock"
                                   TextWrapping="WrapWholeWords"
                                   TextAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="16" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>