<views:ChatViewBase
    x:Class="ChatModApp.Views.ChatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:ChatModApp.Views" xmlns:viewmodels="using:ChatModApp.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ChatViewModel}"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Vertical">

        <ListView Name="ChatList"/>

        <StackPanel Orientation="Horizontal" Margin="0,20,0,20" Height="60">
            <TextBox Name="ChatBox"
                     Header="Enter the channel's username:" PlaceholderText="Channel"
                     Width="300" HorizontalAlignment="Left" />
            <Button Name="SubmitButton"
                    Content="Open"
                    VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="20,0" />
        </StackPanel>
    </StackPanel>
</views:ChatViewBase>